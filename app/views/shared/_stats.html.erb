<% @user ||= current_user %>
<div class="stats">
  <%= link_to  following_new_user_path @user do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "following" %>
  <% end %>
  <%= link_to followers_new_user_path @user do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "followers" %>
  <% end %>
</div>
