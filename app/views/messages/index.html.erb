<div class="row">
  <div class="col-md-9">
    <ul id="conversations-list">

    </ul>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body" id="message-panel">
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.name, conversations_path(user_id: user), remote: true, method: :post %>
              <% if user.online? %>
                <span class="green-dot"></span>
              <% else %>
                <span class="black-dot"></span>
              <% end %>
              <span user-id="<%= user.id %>">
                <span class="badge badge-secondary" style="background-color: #FF0000;" value="0"></span>
              </span>
            </li>
            <hr>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
